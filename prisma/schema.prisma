generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

model Client {
  id             String              @id @default(cuid())
  name           String
  email          String              @unique
  passwordHash   String
  image          String?
  role           Role                @default(MEMBER)
  isActive       Boolean             @default(true)
  
  // Profile Fields
  fullName       String?
  phone          String?
  birthDate      DateTime?
  address        Json?               // { street, number, neighborhood, city, state, zip }
  termsAccepted  Boolean             @default(false)
  lgpdConsent    Boolean             @default(false)

  // Meta Integration
  metaUserAccessToken String?
  metaUserTokenExpiry DateTime?

  // Relations
  metaAdAccounts  MetaAdAccount[]
  googleAdAccounts GoogleAdAccount[]
  integrations   IntegrationConfig[]
  
  // Sharing
  sentInvites     AccountInvite[]    @relation("SentInvites")
  receivedInvites AccountInvite[]    @relation("ReceivedInvites")

  // Goals
  goals           ClientGoal[]

  // Views
  tableViews      TableView[]

  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
}

model MetaAdAccount {
  id             String              @id @default(cuid())
  clientId       String
  client         Client              @relation(fields: [clientId], references: [id])
  adAccountId    String
  name           String?
  accessToken    String
  tokenExpiresAt DateTime?
  status         String
  insightsDaily  MetaAdInsightDaily[]
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  @@index([clientId])
  @@index([adAccountId])
}

model IntegrationConfig {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  provider    String   // "KOMMO"
  isActive    Boolean  @default(false)
  config      Json?    // { subdomain: "..." }
  journeyMap  Json?    // ["Criado", "Qualificado", ...]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clientId])
}

model MetaAdInsightDaily {
  id              String         @id @default(cuid())
  metaAdAccountId String
  metaAdAccount   MetaAdAccount  @relation(fields: [metaAdAccountId], references: [id])
  date            DateTime
  campaignId      String
  campaignName    String
  adsetId         String
  adsetName       String
  adId            String
  adName          String
  impressions     Int
  clicks          Int
  spend           Float
  leads           Int
  reach           Int            @default(0)
  results         Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@unique([metaAdAccountId, adId, date])
  @@index([campaignId])
  @@index([adId])
  @@index([date])
}

model GoogleAdAccount {
  id             String                @id @default(cuid())
  clientId       String
  client         Client                @relation(fields: [clientId], references: [id])
  customerId     String                // Google Ads Customer ID (123-456-7890)
  managerId      String?               // MCC ID if applicable
  name           String?
  refreshToken   String                // Critical for offline access
  accessToken    String?               // Short-lived
  tokenExpiresAt DateTime?
  status         String                @default("ACTIVE") // ACTIVE, DISCONNECTED
  insightsDaily  GoogleAdInsightDaily[]
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt

  @@index([clientId])
  @@index([customerId])
}

model GoogleAdInsightDaily {
  id                String          @id @default(cuid())
  googleAdAccountId String
  googleAdAccount   GoogleAdAccount @relation(fields: [googleAdAccountId], references: [id])
  date              DateTime
  campaignId        String
  campaignName      String
  adGroupId         String
  adGroupName       String
  adId              String
  adName            String
  impressions       Int
  clicks            Int
  cost              Float           // "spend" in Google Ads terms (micros usually, but storing as float here for consistency)
  conversions       Float           // "leads" or "results"
  conversionValue   Float?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@unique([googleAdAccountId, adId, date])
  @@index([campaignId])
  @@index([adId])
  @@index([date])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model AccountInvite {
  id          String       @id @default(cuid())
  ownerId     String
  owner       Client       @relation("SentInvites", fields: [ownerId], references: [id])
  guestId     String
  guest       Client       @relation("ReceivedInvites", fields: [guestId], references: [id])
  status      InviteStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([ownerId, guestId]) // Prevent duplicate invites between same users
  @@index([ownerId])
  @@index([guestId])
}

enum GoalType {
  INVESTMENT
  ROAS
  CPA // Cost Per Action (Step)
}

model ClientGoal {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  type        GoalType
  stageIndex  Int?     // Only for CPA goals (0 = Stage 1, 1 = Stage 2, etc.)
  value       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([clientId, type, stageIndex]) // Ensure one goal per type/stage per client
  @@index([clientId])
}

model TableView {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  name        String
  dataSource  String   // "KOMMO", "META", "HYBRID"
  columns     Json     // Array of column keys e.g. ["name", "status", "spend"]
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clientId, dataSource])
}
